{% extends "base.html.twig" %}
{% block body %}
<div class="row">
    <div class="col-md-5 offset-3">
        <form autocomplete="off" method="post" id="form" action="{{path('nouveauCompteB')}}">
            <div class="form-group">
                <label for="id_debit">Nom complet du Membre</label>
                <input type="text" name="nom" class="form-control" id="nom" >
                <div class="validate"></div>
            </div>
            <div class="form-group">
                <label for="credit">Numero de télephone</label>
                <input type="text" name="contact" class="form-control" id="contact" required>
                <div class="validate"></div>
            </div>
        
            <div class="form-group">
                <label for="somme">Adress / Domicile</label>
                <input type="text" name="adresse" class="form-control" id="adresse" required>
                <div class="validate"></div>
            </div>
        
            <div class="loading"></div>
            <div class="error-message"></div>
            <div class="message"></div>
        
            <button type="submit" class="btn btn-primary">Créer le compte</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Femer</button>
        </form>

    </div>
</div>


{% endblock body %}