{% extends "base.html.twig" %}
{% block body %}

<div class="row">
    <div class="col-md-8 offset-1">
        <br>
        <a class=" btn btn-primary" href="{{path('nouveauCompte')}}">Nouveau Compte</a>
        <br><br>
        <table class="table">
            <tr>
                <th>Compte n°</th>
                <th>Nom</th>
                <th>Contact</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
            {% for row in comptes %}
            <tr>
                <td>{{row.id}}</td>
                <td>{{row.membre.nom}}</td>
                <td>{{row.membre.contact}}</td>
                <td>{{row.membre.adresse}}</td>
                <td style="width: 525px;">
                    <a class=" btn btn-warning" href="{{path('crediterCompte',{id:row.id})}}">Créditer le compte</a>
                    <a class=" btn btn-info" href="{{path('debiterCompte',{id:row.id})}}">Débiter le compte</a>
                    <a class=" btn btn-dark" href="{{path('transfererArgent',{id:row.id})}}">Transférer de l'argent</a>
                </td>
            </tr>
                
            {% else %}
            <tr>
                <td colspan="3">La lite est vide ...</td>
            </tr> 
            {% endfor %}
        </table>
    </div>
</div>


{% endblock body %}