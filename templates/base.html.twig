<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}Portefeuille!{% endblock %}
	</title>
	{# Run `composer require symfony/webpack-encore-bundle`
	and uncomment the following Encore helpers to start using Symfony UX #}
	<link href="img/favicon.png" rel="icon">
	<link href="img/apple-touch-icon.png" rel="apple-touch-icon">
	<!-- Bootstrap core CSS -->
	<link href="dist/css/bootstrap.min.css" rel="stylesheet">
	{# <link href="dist/css/style.css" rel="stylesheet"> #}
	<link href="font/fontawesome/css/all.min.css" rel="stylesheet">
	{# <link href="font/themify-icons/css/themify-icons.css" rel="stylesheet"> #}
	<link href="dist/css/sweetalert.css" rel="stylesheet">
	<style>
		#table th,td{border: 2px gainsboro solid;}
		#table{border-collapse: collapse;}
		#form{border: 3px black solid; color: green; padding: 8px; margin-top: 5px;}
	</style>
	{% block stylesheets %}
	<!--external css-->
	{#{{ encore_entry_link_tags('app') }}#}
	{% endblock %}

</head>

<body>
	{% include "layouts/navigation.html.twig" %}
	{% block body %}{% endblock %}
	{% include "layouts/modal.html.twig" %}
	<script src="dist/js//jquery.min.js"></script>
	<script src="dist/js//bootstrap.min.js"></script>
	<script src="dist/js/sweetalert.min.js"></script>
	{#{{ encore_entry_script_tags('app') }}#}
	<script src="dist/js/Ajax.js"></script>
	<script src="dist/js/navigation.js"></script>
	
	<script>
		var insertClient= "{{path('insertClient')}}"
		var updateClient= "{{path('updateClient')}}"
		var deleteClient= "{{path('deleteClient')}}"
		var depotCompte= "{{path('depotCompte')}}"
		var retraitCompte= "{{path('retraitCompte')}}"
		var virerMontant= "{{path('virerMontant')}}"
		var index= "{{path('membres')}}"
		insert(insertClient,index)
		update(updateClient,depotCompte,retraitCompte,virerMontant)

		remove(deleteClient,index)
		showClient()
	</script>
	{% block javascripts %}
	{% endblock %}
</body>

</html>